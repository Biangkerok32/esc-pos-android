<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:paddingTop="24dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/pos_accent"
			android:text="@string/pos_paired_devices"
			android:layout_marginBottom="8dp"/>

		<sam.lab.posprinter.bluetooth.DeviceItemView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:insets_vertical="16dp"
			app:insets_horizontal="8dp"
			app:item_title="Title"
			app:item_icon="@drawable/ic_phone_24dp"/>

	</LinearLayout>

	<View
		android:layout_width="wrap_content"
		android:layout_height="1dp"
		android:background="@color/pos_highlight"
		android:layout_marginTop="16dp"
		android:layout_marginBottom="16dp"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/pos_accent"
			android:text="@string/pos_available_devices"
			android:layout_marginBottom="8dp"/>

		<sam.lab.posprinter.bluetooth.DeviceItemView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:insets_vertical="16dp"
			app:insets_horizontal="8dp"
			app:item_title="Title"
			app:item_icon="@drawable/ic_print_24dp"/>

	</LinearLayout>

</LinearLayout><!-- From: file:/Users/Yaroslav/Documents/Workspace/Android/PosPrinter/lib/src/main/res/layout/search_dialog_content.xml -->